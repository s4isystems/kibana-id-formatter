{
    // extend Kibana's tsconfig, or use your own settings
    "extends": "../../kibana/tsconfig.json",

  "compilerOptions": {
    "lib": ["dom", "es2015"],
    "baseUrl": ".",
    "strict": true,
    "paths": {
      "plugins/kibana-s4i-ng-plugin/*": [ "public/*" ]
    }
  },

  // tell the TypeScript compiler where to find your source files
  "include": [
    "server/**/*.ts",
    "public/**/*.ts"
  ]
}